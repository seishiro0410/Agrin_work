<p id="notice"></p>
  <div class="container">


    <p></p>

    <div class="row">
      <div class="col-md-5 offset-2 text-center">
        <div class="box1">
          <h2>利用者マイページ情報</h2>
        </div>
      </div>
      <div class="col-md-3 offset-2 align-self-center">
      <%= link_to '編集する', customers_mypage_edit_path(@customer), class: "btn btn-success btn-lg" %>
      </div>
    </div>

    <p></p>

    <div class="row">
      <div class="col-md-4 offset-1">
        <div class="box2">
          <%= image_tag @customer.get_customers_image,size: "300x300" %>
        </div>
      </div>

      <div class="col-md-6">
        <table class="table table-bordered table-hover table-light" >
          <tr><th class="table-active">利用者名</th><td><%= @customer.first_name %><%= @customer.last_name %></td></tr>
          <tr><th class="table-active">フリガナ</th><td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td></tr>
          <tr><th class="table-active">メールアドレス</th><td><%= @customer.email %></td></tr>
          <tr><th class="table-active">性別</th><td><%= @customer.gender_i18n %></td></tr>
          <tr><th class="table-active">年齢</th><td><%= @customer.age %>歳</td></tr>
          <tr><th class="table-active">郵便番号</th><td><%= @customer.postal_code %></td></tr>
          <tr><th class="table-active">住所</th><td><%= @customer.address %></td></tr>
          <tr><th class="table-active">電話番号</th><td><%= @customer.telephone_number %></td></tr>

        </table>
      </div>
    </div>
  </div>